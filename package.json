{
  "name": "my-angular",
  "private": true,
  "scripts": {
    "start": "ng serve --no-hmr",
    "build": "ng build",
    "watch": "ng build --watch",
    "prepare": "husky",
    "postinstall": "bun run lint:write",
    "eslint:check": "eslint .",
    "eslint:write": "eslint . --fix",
    "prettier:check": "prettier -c --log-level=warn .",
    "prettier:write": "prettier -lw --log-level=warn .",
    "lint:check": "bun run eslint:check & bun run prettier:check",
    "lint:write": "bun run eslint:write && bun run prettier:write",
    "npm:check": "bunx npm-check-updates"
  },
  "dependencies": {
    "@angular/animations": "^21",
    "@angular/cdk": "^21",
    "@angular/common": "^21",
    "@angular/compiler": "^21",
    "@angular/core": "^21",
    "@angular/forms": "^21",
    "@angular/material": "^21",
    "@angular/platform-browser": "^21",
    "@angular/platform-browser-dynamic": "^21",
    "@angular/router": "^21",
    "@ngrx/signals": "^21",
    "rxjs": "^7",
    "tslib": "^2"
  },
  "devDependencies": {
    "@angular/build": "^21",
    "@angular/cli": "^21",
    "@angular/compiler-cli": "^21",
    "@eslint/js": "^9.39",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "angular-eslint": "^21.2",
    "eslint": "^9.39",
    "husky": "^9",
    "postcss": "^8",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.7",
    "tailwindcss": "^4",
    "typescript": "^5.9",
    "typescript-eslint": "^8.54"
  }
}
